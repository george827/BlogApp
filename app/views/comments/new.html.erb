<%= form_with model: [@post, @comment], url: user_post_comments_path  do |form| %>
  <% if @comment.errors.any? %>
    <div>
      <% @comment.errors.full_messages.each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>
  <% end %>
  <div class="inputs">
    </div>
    <div>
      <%= form.text_field :Text, placeholder: "Add new comment here", class: "input" %>
    </div>
    <div>
      <%= form.submit "Comment", class: "button" %>
    </div>
  </div>
<% end %>
