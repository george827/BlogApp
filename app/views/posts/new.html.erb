<%= form_with model: [@user, @post], url: user_posts_path(@user, @post)  do |form| %>
  <% if @post.errors.any? %>
    <div>
      <% @post.errors.full_messages.each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>
  <% end %>
  <div class="inputs">
    <div>
      <%= form.label :Title, class: "label" %>
      <%= form.text_field :Title, placeholder: "Add post title", class: "input" %>
    </div>
    <div>
      <%= form.label :Text, class: "label" %>
      <%= form.text_field :Text, placeholder: "Add post body", class: "input text-input" %>
    </div>
    <div>
      <%= form.submit "Add post", class: "button" %>
    </div>
  </div>
<% end %>